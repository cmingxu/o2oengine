%p#notice= notice
%h1 Listing Users
%table
  %thead
    %tr
      %th Login
      %th Name
      %th Salt
      %th Encrypted password
      %th Last login at
      %th Last login ip
      %th Source
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.login
        %td= user.name
        %td= user.salt
        %td= user.encrypted_password
        %td= user.last_login_at
        %td= user.last_login_ip
        %td= user.source
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User', new_user_path
