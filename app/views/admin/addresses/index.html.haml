%p#notice= notice
%h1 Listing Addresses
%table
  %thead
    %tr
      %th User
      %th Name
      %th Provice
      %th City
      %th Detail address
      %th Postal code
      %th Phone
      %th{:colspan => "3"}
  %tbody
    - @addresses.each do |address|
      %tr
        %td= address.user_id
        %td= address.name
        %td= address.provice
        %td= address.city
        %td= address.detail_address
        %td= address.postal_code
        %td= address.phone
        %td= link_to 'Show', address
        %td= link_to 'Edit', edit_address_path(address)
        %td= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Address', new_address_path
