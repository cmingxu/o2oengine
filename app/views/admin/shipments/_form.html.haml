= form_for(@shipment) do |f|
  - if @shipment.errors.any?
    #error_explanation
      %h2
        = pluralize(@shipment.errors.count, "error")
        prohibited this shipment from being saved:
      %ul
        - @shipment.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :address_id
    %br/
    = f.number_field :address_id
  .field
    = f.label :order_id
    %br/
    = f.number_field :order_id
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .actions
    = f.submit
