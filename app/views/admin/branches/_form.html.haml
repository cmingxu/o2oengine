.admin_form_head
  - if @branch.persisted?
    修改门店
  - else
    新建门店

= form_for [:admin, @branch] do |f|
  .form_body
    .row
      = f.label :name, "门店名称", :class => "col-md-3"
      = f.text_field :name, :class => "col-md-6"
    .row
      = f.label :address, "地址", :class => "col-md-3"
      = f.text_field :address, :class => "col-md-6"
    .row
      = f.label :contact, "电话", :class => "col-md-3"
      = f.text_field :contact, :class => "col-md-6"
  .actions
    = f.submit "提交", :class => "btn btn-success", :id => "submit_btn"
    = link_to "取消", "javascript:close_popup()", :role => "button", :class => "btn btn-default"
