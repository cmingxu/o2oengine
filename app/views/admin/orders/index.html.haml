.products.index_page
  .container
    .row.xcm_index_header
      %a{:role => "button", :class => "btn btn-success pull-right" }= fa_icon("fw refresh")
    .row
      %ul.list-group.xcm-list-group
        - @orders.each do |p|
          %li.list-group-item
            .xcm_item_icon
            .xcm_item_name_and_desc
              .xcm_item_name
              .xcm_item_desc

            .xcm_actions.pull-right

            .clearfix

      = paginate @orders




