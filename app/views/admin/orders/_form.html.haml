= form_for(@order) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :total_price
    %br/
    = f.number_field :total_price
  .field
    = f.label :order_status
    %br/
    = f.text_field :order_status
  .field
    = f.label :ship_status
    %br/
    = f.text_field :ship_status
  .field
    = f.label :payment_status
    %br/
    = f.text_field :payment_status
  .actions
    = f.submit
